@using System.Web.Optimization
@using abw.Helpers
@model abw.ViewModels.CarViewModel
@{
	const string title = "Редактировать машину";
	ViewBag.Title = title;
}
@section styles
{
	@Styles.Render("~/Content/styles/custom/car")
	@Styles.Render("~/Content/styles/custom/forms")
}
@section scripts
{
	<script type="text/javascript">
		require(['car'], function (car) {
			@{
				List<string> errorMessages = CommonHelpers.GetErrorMessages(ViewData.ModelState);
			}
			car(@Html.ToJs(Model), @Html.ToJs(errorMessages));
		});
	</script>
}
@{
	Html.RenderPartial("Buttons/_Back", title);
	using (Html.BeginForm("Edit", "Cars", FormMethod.Post, new { data_bind = "submit: submit", enctype = "multipart/form-data" }))
	{
		Html.RenderPartial("_Car");
	}
}