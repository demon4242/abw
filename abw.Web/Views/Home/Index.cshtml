@{
	ViewBag.Title = "Главная";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@section scripts
{
	<script type="text/javascript">
		require(['main'], function(main) {
			main.loadModules(['viewModels/index']);
		});
	</script>
}

<!-- ko with: indexPage -->

<div class="main-page-title">
	<strong>
		Запчасти к автомобилям
		<br />
		SEAT, Skoda, Volkswagen, Nissan, Toyota
	</strong>
</div>

<div data-bind="template: { afterRender: init }" class="carousel">
	<a href="@Url.Action("CarsByMake", new { make = "skoda" })">
		<img src="@Url.Content("~/Content/images/carousel/skoda.jpg")" alt="skoda" />
	</a>
	<a href="@Url.Action("CarsByMake", new { make = "seat" })">
		<img src="@Url.Content("~/Content/images/carousel/seat.jpg")" alt="seat" />
	</a>
	<a href="@Url.Action("CarsByMake", new { make = "volkswagen" })">
		<img src="@Url.Content("~/Content/images/carousel/volkswagen.jpg")" alt="volkswagen" />
	</a>
	<a href="@Url.Action("CarsByMake", new { make = "toyota" })">
		<img src="@Url.Content("~/Content/images/carousel/toyota.jpg")" alt="toyota" />
	</a>
	<a href="@Url.Action("CarsByMake", new { make = "nissan" })">
		<img src="@Url.Content("~/Content/images/carousel/nissan.jpg")" alt="nissan" />
	</a>

	<div data-bind="foreach: array">
		<div class="circle" data-bind="click: $parent.change, css: { 'active': $parent.activeIndex() === $data }, style: { 'right': $parent.right($index()) }"></div>
	</div>

	<div data-bind="click: moveLeft" class="slider slider-left"></div>
	<div data-bind="click: moveRight" class="slider slider-right"></div>
</div>

<!-- /ko -->