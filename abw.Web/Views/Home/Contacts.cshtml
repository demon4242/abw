@using System.Web.Optimization
@{
	ViewBag.Title = "Контакты";
}
@section styles
{
	@Styles.Render("~/Content/styles/custom/contacts")
}
@section scripts
{
	<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyD0NvPmuC93QnT8a9mQGEXfpEM1UgMps4Q&sensor=false&language=ru"></script>
	<script type="text/javascript">
		require(['main'], function (main) {
			main.loadModules(['viewModels/contacts']);
		});
	</script>
}

<div data-bind="with: contactsPage" id="mapWrapper">
	<div id="mapTitle">Время и место работы</div>
	<div id="map">
		<span>
			09:00 - 14:00
		</span>
		<div data-bind="template: { afterRender: initMap }">
		</div>
	</div>
</div>

<div id="dayOff">
	Выходной: понедельник
</div>

<table id="contacts" class="table table-bordered">
	<tr>
		<th colspan="2">Контакты</th>
	</tr>
	<tr>
		<td>
			Имя
		</td>
		<td>
			Пётр
		</td>
	</tr>
	<tr>
		<td>
			Телефоны
		</td>
		<td>
			@Html.Partial("_Phones")
		</td>
	</tr>
	<tr>
		<td>
			Электронная почта
		</td>
		<td>
			<a href="mailto:demo_xxx@mail.ru">demo_xxx@mail.ru</a>
		</td>
	</tr>
</table>