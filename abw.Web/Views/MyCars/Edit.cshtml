@using System.Web.Optimization
@using abw.Helpers
@model abw.ViewModels.MyCarViewModel
@{
	const string title = "Редактировать мою машину";
	ViewBag.Title = title;
}
@section styles
{
	@Styles.Render("~/car")
	@Styles.Render("~/forms")
}
@section scripts
{
	<script type="text/javascript">
		require(['myCar'], function (myCar) {
			@{
				List<string> errorMessages = CommonHelpers.GetErrorMessages(ViewData.ModelState);
			}
			myCar(@Html.ToJs(Model), @Html.ToJs(errorMessages));
		});
	</script>
}
@{
	Html.RenderPartial("Buttons/_Back", title);
	using (Html.BeginForm("Edit", "MyCars", FormMethod.Post, new { data_bind = "submit: submit", enctype = "multipart/form-data" }))
	{
		Html.RenderPartial("_MyCar");
	}
}