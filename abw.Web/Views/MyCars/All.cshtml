@using abw.Helpers
@using abw.ViewModels
@model Grid<MyCarForDisplay>
@{
	ViewBag.Title = "Мои машины";
}
@section scripts
{
	<script type="text/javascript">
		require(['allMyCars'], function (allMyCars) {
			allMyCars(@Html.Raw(NewtonJson.Serialize(Model)));
		});
	</script>
}
@{ Html.RenderPartial("Buttons/_New"); }
@* todo: move init of 'no-data' css class to js *@
<table data-bind="css: { 'no-data': !list().length }" class="table table-striped table-bordered grid">
	<thead>
		<tr>
			<th>Марка и модель</th>
			<th>Год</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<!-- ko foreach: list -->
		<tr>
			<td>
				<a data-bind="text: makeAndModel, attr: { href: '@Url.Action("Edit")' + '/' + id }" title="Редактировать"></a>
			</td>
			<td data-bind="text: year"></td>
			<td title="Удалить">
				<i class="glyphicon glyphicon-remove" title="Удалить"></i>
			</td>
		</tr>
		<!-- /ko -->
		@{ Html.RenderPartial("_NoRecordsFound", 3); }
	</tbody>
</table>


