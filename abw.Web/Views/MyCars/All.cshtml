@using abw.ViewModels
@model Grid<MyCarForDisplay>
@{
	ViewBag.Title = "Мои машины";
}
@{ Html.RenderPartial("Buttons/_New"); }
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Марка и модель</th>
			<th>Год</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (MyCarForDisplay car in Model.List)
		{
			<tr>
				<td>
					@Html.ActionLink(car.MakeAndModel, "Edit", new { id = car.Id })
				</td>
				<td>
					@car.Year
				</td>
				<td>
					<input type="button" class="btn btn-danger btn-sm" value="Удалить" />
				</td>
			</tr>
		}
		@if (Model.List.Count == 0)
		{
			Html.RenderPartial("_NoRecordsFound", 3);
		}
	</tbody>
</table>


