@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/styles/bootstrap-3.1.1/css")
	@Styles.Render("~/Content/styles/custom/global")
	@RenderSection("styles", false)
</head>
<body>
	<header>
		<div id="authInfo">
			@if (!User.Identity.IsAuthenticated)
			{
				@* todo: uncomment when logic is implemented *@
				@*<a id="signInLink">Войти</a>*@
				@Html.ActionLink("Войти", "SignIn", "Account")
			}
			else
			{
				string returnUrl = Request.Url != null
					? Request.Url.AbsolutePath
					: null;

				<div class="dropdown">
					<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
						@User.Identity.Name
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
						<li role="presentation">
							@Html.ActionLink("Машины", "Grid", "Cars")
						</li>
						<li role="presentation" class="divider"></li>
						<li role="presentation">
							@Html.ActionLink("Выйти", "SignOut", "Account", new { returnUrl }, null)
						</li>
					</ul>
				</div>
			}
		</div>

		@{ Html.RenderPartial("_Phones"); }

		<div id="carLogos">
			<div>
				Оригинальные б/у запчасти из Европы
			</div>
			<a href="@Url.Action("CarsByMake", "Home", new { make = "seat" })">
				<img src="@Url.Content("~/Content/images/car-logos/seat.jpg")" alt="seat logo" />
			</a>
			<a href="@Url.Action("CarsByMake", "Home", new { make = "skoda" })">
				<img src="@Url.Content("~/Content/images/car-logos/skoda.jpg")" alt="skoda logo" />
			</a>
			<a href="@Url.Action("CarsByMake", "Home", new { make = "volkswagen" })">
				<img src="@Url.Content("~/Content/images/car-logos/volkswagen.png")" alt="volkswagen logo" />
			</a>
			<a href="@Url.Action("CarsByMake", "Home", new { make = "nissan" })">
				<img src="@Url.Content("~/Content/images/car-logos/nissan.jpg")" alt="nissan logo" />
			</a>
			<a href="@Url.Action("CarsByMake", "Home", new { make = "toyota" })">
				<img src="@Url.Content("~/Content/images/car-logos/toyota.png")" alt="toyota logo" />
			</a>
		</div>


		<ul class="nav nav-tabs">
			<li>@Html.ActionLink("Главная", "Index", "Home")</li>
			<li>@Html.ActionLink("Машины", "Cars", "Home")</li>
			<li>@Html.ActionLink("О нас", "About", "Home")</li>
			<li>@Html.ActionLink("Контакты", "Contacts", "Home")</li>
		</ul>
	</header>

	@RenderBody()

	<div id="notification"></div>

	<div id="confirm" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title"></h4>
				</div>
				<div class="modal-body"></div>
				<div class="modal-footer">
					<button type="button" class="btn btn-primary">Yes</button>
					<button type="button" class="btn btn-default" data-dismiss="modal">No</button>
				</div>
			</div>
		</div>
	</div>

	<div id="spinnerComplex">
		<div id="spinnerBackground"></div>
		<div id="spinnerWrapper">
			<div>
				<div id="spinner">
					<div id="bar1"></div>
					<div id="bar2"></div>
					<div id="bar3"></div>
					<div id="bar4"></div>
					<div id="bar5"></div>
					<div id="bar6"></div>
					<div id="bar7"></div>
					<div id="bar8"></div>
					<div id="bar9"></div>
					<div id="bar10"></div>
					<div id="bar11"></div>
					<div id="bar12"></div>
				</div>
			</div>
		</div>
	</div>

	@Html.Partial("_SignInModal")

	@* todo: add scripts minification *@
	<script src="@Url.Content("~/Scripts/require-2.1.9.js")"></script>
	<script type="text/javascript">
		(function () {
			var baseUrl = '@Url.Content("~/Scripts/")';
			var validationFolder = baseUrl + 'validation/';
			var knockoutFolder = baseUrl + 'knockout/';
			var customFolder = baseUrl + 'custom/';
			requirejs.config({
				paths: {
					'jquery': baseUrl + 'jquery-2.0.3',
					'bootstrap': baseUrl + 'bootstrap-3.1.1',
					'bootstrap-notify': baseUrl + 'bootstrap-notify-1.0',
					// validation
					'validation': validationFolder + 'jquery.validate-1.11.1',
					'unobtrusive-validation': validationFolder + 'jquery.validate.unobtrusive',
					// knockout
					'knockout': knockoutFolder + 'knockout-3.0.0',
					'knockout-mapping': knockoutFolder + 'knockout.mapping-2.4.0',
					// custom
					'main': customFolder + 'main',
					'baseForm': customFolder + 'baseForm',
					'car': customFolder + 'car',
					'signIn': customFolder + 'signIn',
					'carsGrid': customFolder + 'carsGrid',
					'notifications': customFolder + 'notifications',
					'loader': customFolder + 'loader',
					'contacts': customFolder + 'contacts',
					// folders
					'customValidation': customFolder + 'validation'
				},
				shim: {
					'bootstrap': {
						deps: ['jquery']
					},
					'validation': {
						deps: ['jquery']
					},
					'unobtrusive-validation': {
						deps: ['validation']
					},
					'knockout-mapping': {
						deps: ['knockout']
					},
					'notifications': {
						deps: ['bootstrap-notify']
					},
					'bootstrap-notify': {
						deps: ['jquery']
					}
				}
			});

			require(['jquery', 'bootstrap']);
		}());
	</script>
	<script type="text/javascript">
		require(['main'], function (main) {
			main.setActivePage();
		});
	</script>
	@RenderSection("scripts", false)
</body>
</html>