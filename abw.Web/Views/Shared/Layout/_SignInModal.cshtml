@using abw.ViewModels
@model SignInModal

<div data-bind="modal: signInModalIsOpened, with: signInModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="sign-in-modal modal-dialog">
		<form data-bind="submit: submit" class="sign-in-form form modal-content" action="@Url.Action("SignInModal", "Account")">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title">Войти</h4>
			</div>
			<div class="modal-body">
				@Html.Partial("_SignInContent")
			</div>
			<div class="modal-footer">
				@Html.Partial("_SubmitArea")
			</div>
		</form>
	</div>
</div>