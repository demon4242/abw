@using abw.ViewModels
@model SignInModel

<div data-bind="modal: signInModalIsOpened, with: signInModal" id="signInModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		@using (Html.BeginForm("SignIn", "Account", FormMethod.Post,
			new { data_bind = "submit: submit", @class = "modal-content" }))
		{
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title">Войти</h4>
			</div>
			<div class="modal-body">
				<div>
					@Html.LabelFor(m => m.Name)
					@Html.TextBoxFor(m => m.Name, new { data_bind = "value: name", autocomplete = "off" })
					@Html.ValidationMessageFor(m => m.Name)
				</div>
				<div>
					@Html.LabelFor(m => m.Password)
					@Html.PasswordFor(m => m.Password, new { data_bind = "value: password" })
					@Html.ValidationMessageFor(m => m.Password)
				</div>
			</div>
			<div class="modal-footer">
				<input type="submit" class="btn btn-primary cancel" value="Войти" />
			</div>
		}
	</div>
</div>