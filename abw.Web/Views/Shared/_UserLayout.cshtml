@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles
{
	@RenderSection("styles", false)
}
@section scripts
{
	<script type="text/javascript">
		require(['main'], function (main) {
			main.loadModules(['modules/carsTreeLoader']);
		});
	</script>
	@RenderSection("scripts", false)
}

<div class="cars-tree-wrapper">
	<div data-bind="foreach: carsTree" class="cars-tree">
		<!-- ko with: make -->
		<div data-bind="template: { name: 'link' }" class="tree-item"></div>
		<!-- /ko -->
		<!-- ko foreach: models -->
		<div data-bind="template: { name: 'link' }" class="tree-item sub-item"></div>
		<!-- /ko -->
	</div>
</div>

<div class="user-page-wrapper">
	<div class="user-page-content">
		@RenderBody()
	</div>
</div>

<script type="text/html" id="link">
	<a data-bind="text: text, attr: { href: href }"></a>
</script>